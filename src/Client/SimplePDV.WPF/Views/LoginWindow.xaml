<Window x:Class="SimplePDV.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimplePDV - Login" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F7F7F7">
    <Grid>
        <!-- Card Central -->
        <Border Background="White" 
                CornerRadius="8" 
                Padding="40"
                MaxWidth="380"
                VerticalAlignment="Center"
                Margin="35">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Logo/Título -->
                <TextBlock Text="SimplePDV" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#111111"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Sistema de Ponto de Venda" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Foreground="#777777"
                           Margin="0,0,0,40"/>

                <!-- Campo Login -->
                <TextBlock Text="Usuário" 
                           FontSize="14" 
                           FontWeight="Medium" 
                           Foreground="#111111" 
                           Margin="0,0,0,8"/>
                
                <TextBox x:Name="TxtLogin"
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="14"
                         Padding="12,10"
                         Height="42"
                         Background="White"
                         BorderBrush="#E2E2E2"
                         BorderThickness="1"
                         Margin="0,0,0,20"/>

                <!-- Campo Senha -->
                <TextBlock Text="Senha" 
                           FontSize="14" 
                           FontWeight="Medium" 
                           Foreground="#111111" 
                           Margin="0,0,0,8"/>
                
                <PasswordBox x:Name="TxtSenha"
                             FontSize="14"
                             Padding="12,10"
                             Height="42"
                             Background="White"
                             BorderBrush="#E2E2E2"
                             BorderThickness="1"
                             Margin="0,0,0,10"/>

                <!-- Mensagem de Erro -->
                <TextBlock x:Name="TxtErro"
                           Text="{Binding MensagemErro}" 
                           Foreground="#DC3545" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>

                <!-- Botão Entrar -->
                <Button Content="Entrar" 
                        Height="42"
                        FontSize="14"
                        FontWeight="Medium"
                        Background="#0066FF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20"
                        Click="BtnEntrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0052CC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Status -->
                <Border Background="#F7F7F7" 
                        Padding="12" 
                        CornerRadius="6" 
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="StatusIndicator"
                                 Width="8" 
                                 Height="8" 
                                 Margin="0,0,8,0"
                                 Fill="#28A745"/>
                        <TextBlock FontSize="13" Foreground="#555555">
                            <Run Text="Status: "/>
                            <Run Text="{Binding IsOnline}" FontWeight="Medium"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
