<UserControl x:Class="SimplePDV.WPF.Views.ProdutosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Grid.Row="0" Text="Produtos" FontSize="28" FontWeight="Bold" 
                   Foreground="#111111" Margin="0,0,0,24"/>

        <!-- Barra de Ações -->
        <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="8" Padding="16" 
                BorderBrush="#E2E2E2" BorderThickness="1" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Buscar por SKU:" VerticalAlignment="Center" 
                           Foreground="#6C757D" FontSize="14" Margin="0,0,12,0"/>
                <TextBox Text="{Binding FiltroSKU, UpdateSourceTrigger=PropertyChanged}" 
                         Width="240" Height="40" Padding="12" FontSize="14"
                         Background="#FFFFFF" Foreground="#111111"
                         BorderBrush="#E2E2E2" BorderThickness="1"
                         Margin="0,0,12,0"/>
                <Button Content="Buscar" Command="{Binding BuscarPorSKUCommand}" 
                        Background="#0066FF" Foreground="White" BorderThickness="0"
                        Height="40" Padding="16,10" FontSize="14" FontWeight="Medium" Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0066FF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0052CC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Todos" Command="{Binding CarregarProdutosCommand}" 
                        Background="#6C757D" Foreground="White" BorderThickness="0"
                        Height="40" Padding="16,10" FontSize="14" FontWeight="Medium" Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6C757D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Sincronizar" Command="{Binding SincronizarCommand}" 
                        Background="#28A745" Foreground="White" BorderThickness="0"
                        Height="40" Padding="16,10" FontSize="14" FontWeight="Medium" Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#218838"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Inativar" Command="{Binding ExcluirProdutoCommand}" 
                        Background="#DC3545" Foreground="White" BorderThickness="0"
                        Height="40" Padding="16,10" FontSize="14" FontWeight="Medium" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#DC3545"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C82333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Grid de Produtos -->
        <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="8" 
                BorderBrush="#E2E2E2" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Produtos}" 
                      SelectedItem="{Binding ProdutoSelecionado}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      Background="Transparent" BorderThickness="0"
                      RowBackground="#FFFFFF" AlternatingRowBackground="#F9FAFB">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F9FAFB"/>
                        <Setter Property="Foreground" Value="#6C757D"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E2E2E2"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="140"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Preço" Binding="{Binding Preco, StringFormat=C2}" Width="120"/>
                    <DataGridTextColumn Header="Estoque" Binding="{Binding EstoqueAtual}" Width="100"/>
                    <DataGridTextColumn Header="Estoque Mín." Binding="{Binding EstoqueMinimo}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding Ativo}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
